<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_quant_pivot_custom" model="ir.ui.view">
        <field name="name">stock.quant.report.pivot.custom</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="value" type="measure"/>
            </xpath>
            <!-- <xpath expr="//field[@name='product_id']" position="after">
                <field name="barcode" type="col"/>
            </xpath> -->
        </field>
    </record>
    <record id="stock_quant_search_custom" model="ir.ui.view">
        <field name="name">stock.quant.report.search.custom</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='productgroup']" position="after">
                <filter string='Barcode' name="barcodegroup" context="{'group_by': 'barcode'}"/>
            </xpath>
        </field>
    </record>
</odoo>